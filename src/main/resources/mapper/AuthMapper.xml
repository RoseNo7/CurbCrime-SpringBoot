<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "//mybatis.org/DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.roseno.curbcrime.mapper.AuthMapper">

    <!-- 회원정보 조회 -->
    <select id="findUserById" resultType="com.roseno.curbcrime.domain.User">
        SELECT  *
        FROM    users
        WHERE   id = #{id}
        AND     is_deleted = FALSE
    </select>
</mapper>